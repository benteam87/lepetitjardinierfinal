<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    {% endblock %}

    {% block javascripts %}

    {% endblock %}

    {% if is_granted('ROLE_ADMIN') %}

        <nav class="navbar navbar-expand-lg navbar-light nav">
            <img src="{{ asset('assets/upload/Le_ptit_jardinier.png') }}" alt="LePetitJardinier_logo" width="100px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_choix') }}">Devis</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Gestion des types de haie
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('app_haie_new') }}">Création</a>
                            <a class="dropdown-item" href="{{ path('app_haie_index') }}">Consultation/Modification</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_devis_crud_index') }}">Tous les Devis</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a>{{app.user.prenom }}</a>
                    </li>
                    <li class="nav-item">
                        <a> {{app.user.nom }}</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto"></ul>
                <li class="nav-item">
                    <a href="#">Mon compte</a>
                </li>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                </ul>
            </div>
        </nav>

    {% elseif is_granted('ROLE_USER') %}
        <!-- Contenu visible pour les utilisateurs connectés -->
        <nav class="navbar navbar-expand-lg navbar-light nav">
            <img src="{{ asset('assets/upload/Le_ptit_jardinier.png') }}" alt="LePetitJardinier_logo" width="100px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_choix') }}">Devis</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_mes_devis') }}">Mes Devis</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a >{{app.user.prenom }}</a>
                    </li>
                    <li class="nav-item">
                        <a> {{app.user.nom }}</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto"></ul>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mon compte</a>
                    </li>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% else %}
        <!-- Contenu visible pour les utilisateurs non connectés -->
        <nav class="navbar navbar-expand-lg navbar-light nav">
            <img src="{{ asset('assets/upload/Le_ptit_jardinier.png') }}" alt="LePetitJardinier_logo" width="100px" height="100px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="{{path ('app_register')}}">Inscription</a>
                    </li>
                </ul>

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="{{ path('app_login') }}">Connexion</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endif %}

</head>
<body>

{% block content %}{% endblock %}
</body>
</html>
